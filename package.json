{
  "scripts": {
    "frontend": "npm run dev --prefix ../frontend/",
    "backend": "npm run dev --prefix ../backend/",
    "setup:frontend": "cd frontend && npm install && node ../copy-env.js ./",
    "setup:backend": "cd backend && npm install && node ../copy-env.js ./",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "dev": ". ~/.nvm/nvm.sh && nvm use 20.18.0 && npx concurrently \"cd backend && npm run dev\" \"cd frontend && npm run dev\"",
    "seed": "cd backend && npx strapi import -f ../seed-data.tar.gz --force",
    "export": "cd backend && npx strapi export --no-encrypt -f ../seed-data",
    "repo:upstream": "git fetch upstream && git merge upstream/main"
  },
  "dependencies": {
    "@gsap/react": "^2.1.2",
    "concurrently": "^8.2.2",
    "embla-carousel-auto-scroll": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "framer-motion": "^12.23.21",
    "gsap": "^3.13.0",
    "npm-check-updates": "^16.14.15"
  }
}
